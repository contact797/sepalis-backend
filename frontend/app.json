{
  "expo": {
    "name": "Sepalis",
    "slug": "sepalis",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "sepalis",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/images/splash-image.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A1A1A"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sepalis.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Sepalis utilise l'appareil photo pour identifier les plantes et diagnostiquer les maladies de votre jardin.",
        "NSPhotoLibraryUsageDescription": "Sepalis accède à vos photos pour identifier les plantes que vous avez photographiées.",
        "NSLocationWhenInUseUsageDescription": "Sepalis utilise votre localisation pour fournir des prévisions météo adaptées à votre jardin et des conseils personnalisés.",
        "NSUserTrackingUsageDescription": "Ces informations permettent d'améliorer votre expérience et de vous proposer du contenu personnalisé."
      },
      "privacyManifests": {
        "NSPrivacyAccessedAPITypes": [
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryUserDefaults",
            "NSPrivacyAccessedAPITypeReasons": [
              "CA92.1"
            ]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1A1A1A"
      },
      "package": "com.sepalis.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "name": "Sepalis",
      "shortName": "Sepalis",
      "lang": "fr-FR",
      "themeColor": "#22C55E",
      "backgroundColor": "#1A1A1A",
      "description": "Votre jardin connecté - Identification de plantes par IA",
      "startUrl": "/",
      "display": "standalone",
      "orientation": "portrait"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-image.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1A1A1A"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#D4AF37",
          "sounds": []
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Sepalis utilise l'appareil photo pour identifier les plantes."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Sepalis utilise votre localisation pour la météo locale."
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {},
      "router": {}
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "owner": "sepalis"
  }
}
