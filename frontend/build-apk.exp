#!/usr/bin/expect -f
set timeout 600

spawn npx eas build --platform android --profile preview

expect {
    "Build queued" {
        puts "\n✅ Build APK lancé avec succès!\n"
    }
    "Error" {
        puts "\n❌ Erreur détectée\n"
        exit 1
    }
    timeout {
        puts "\n⏱️ Timeout\n"
        exit 1
    }
    eof
}

expect eof
